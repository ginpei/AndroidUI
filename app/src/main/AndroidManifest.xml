<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.ginpei.androidui">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextToSpeechActivity"
            android:label="Text to Speech" />
        <activity
            android:name=".SpinnerActivity"
            android:label="Spinner UI" />
        <activity
            android:name=".PreferencesActivity"
            android:label="Preferences" />
        <activity
            android:name=".VoiceRecognitionActivity"
            android:label="Voice Recognition" />
        <activity
            android:name=".ListViewActivity"
            android:label="List View UI" />
        <activity
            android:name=".DetailFromListViewActivity"
            android:label="Detail" />
        <activity
            android:name=".CustomListViewActivity"
            android:label="Custom List View UI" />
    </application>

</manifest>