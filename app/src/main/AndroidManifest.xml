<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.ginpei.androidui">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextToSpeechActivity"
            android:label="Text to Speech" />
        <activity
            android:name=".TextToSpeechInThreadActivity"
            android:label="Text to Speech in Thread" />
        <activity
            android:name=".SpinnerActivity"
            android:label="Spinner UI" />
        <activity
            android:name=".PreferencesActivity"
            android:label="Preferences" />
        <activity
            android:name=".VoiceRecognitionActivity"
            android:label="Voice Recognition" />
        <activity
            android:name=".ListViewActivity"
            android:label="List View UI" />
        <activity
            android:name=".DetailFromListViewActivity"
            android:label="Detail" />
        <activity
            android:name=".CustomListViewActivity"
            android:label="Custom List View UI" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DialogsActivity" />
        <activity android:name=".DatabaseActivity" />
        <activity
            android:name=".BroadcastActivity"
            android:label="Broadcast" />

        <receiver
            android:name=".PowerConnectionReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ProgressBarActivity"
            android:label="Progress Bar" />

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".MyServiceActivity" />

        <service
            android:name=".MyIntentService"
            android:exported="false" />

        <activity
            android:name=".MultiThreadingActivity"
            android:label="Multi Threading" />
        <activity
            android:name=".PlayMusicActivity"
            android:label="Play Music" />
        <activity
            android:name=".FetchHttpActivity"
            android:label="Fetch HTTP" />
        <activity
            android:name=".OrmaActivity"
            android:label="Android Orma" />
        <activity
            android:name=".LocationActivity"
            android:label="Location" />
        <activity
            android:name=".DataBindingActivity"
            android:label="Data Binding" />
    </application>

</manifest>